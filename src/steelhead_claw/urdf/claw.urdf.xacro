<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:macro name="claw" params="parent xyz rpy">
    
    <!-- Claw Base Link -->
    <link name="claw_base">
      <visual>
        <geometry>
          <box size="0.1 0.05 0.03"/>
        </geometry>
        <material name="gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.1 0.05 0.03"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>
    
    <!-- Claw Moving Part -->
    <link name="claw_gripper">
      <visual>
        <geometry>
          <box size="0.08 0.02 0.01"/>
        </geometry>
        <material name="orange">
          <color rgba="1.0 0.5 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.08 0.02 0.01"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
      </inertial>
    </link>
    
    <!-- Joint connecting claw to AUV -->
    <joint name="claw_mount_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="claw_base"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
    </joint>
    
    <!-- Joint for claw movement -->
    <joint name="claw_joint" type="revolute">
      <parent link="claw_base"/>
      <child link="claw_gripper"/>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="0.0" upper="1.57" effort="10.0" velocity="1.0"/>
    </joint>
    
    <!-- Gazebo plugin -->
    <gazebo>
      <plugin name="claw_plugin" filename="libgazebo_claw_plugin.so">
        <joint_name>claw_joint</joint_name>
      </plugin>
    </gazebo>
    
  </xacro:macro>
  
</robot>