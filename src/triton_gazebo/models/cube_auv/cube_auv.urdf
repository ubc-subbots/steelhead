<?xml version="1.0" ?>
<robot name="cube_auv" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="base_link">
    <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="1"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual name='base_link_visual'>
        <geometry>
            <box size="1 1 1"/>
        </geometry>
        <material name="yellow">
          <color rgba="1 1 0 1"/>
        </material>
    </visual>
    <collision name='base_link_collision'>
        <geometry>
            <box size="1 1 1"/>
        </geometry>
    </collision>
  </link>
  <gazebo reference="base_link">
    <material>Gazebo/Yellow</material>
    <turnGravityOff>1</turnGravityOff>
    <sensor type="camera" name="front_camera">
      <pose>0.5 0 0 0 0 0</pose>
      <update_rate>60</update_rate>
      <visualize>true</visualize>
      <camera name="front">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
      <plugin name="gazebo_camera_controller" filename="libgazebo_ros_camera.so">
        <ros>
          <namespace>/triton/drivers</namespace>
        </ros>
      </plugin>
    </sensor>
    <sensor type="camera" name="down_camera">
      <pose>0 0 -0.5 0 1.57 0</pose>
      <update_rate>60</update_rate>
      <visualize>true</visualize>
      <camera name="down">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
      <plugin name="gazebo_camera_controller" filename="libgazebo_ros_camera.so">
        <ros>
          <namespace>/triton/drivers</namespace>
        </ros>
      </plugin>
    </sensor>
  </gazebo> 
</robot>